!!!
%html
	%head
		%title Smog Printer
		= stylesheet_link_tag :all
		= javascript_include_tag :defaults
		= csrf_meta_tag
	%body
		#flash
			- flash.each do |name, msg|
				= "Alert: #{msg}"
				
		#user_nav
			- if current_user
				= link_to "[logout]", logout_path
				#{current_user.nickname}
			- else
				= link_to "Sign in with Twitter", "/auth/twitter"

		#main
			= yield